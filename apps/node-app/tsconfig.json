{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": false,
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@deribit/*": [
        "../../external/deribit-api-clients/typescript-node/dist/*"
      ]
    }
  }
}